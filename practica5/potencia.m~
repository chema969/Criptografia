function pote=potencia (c, d, n)
binario_d=bitget(d,uint64(log2(d))+1:-1:1,'uint64');
binario_d=flip(binario_d);
aux=zeros(size(binario_d));
aux(1)=mod(c,n);
res=uint64(1);
res(1)=1;
if(binario_d(1)==1)
    res(1)=res(1)*aux(1);
end
six
for i=2:size(binario_d)
    aux(i-1)
    aux(i)=mod(aux(i-1)*aux(i-1),n);
    if(binario_d(i)==1)
        res(1)=mod(aux(i)*res,n);
        
    end
end

pote=res(1);

end

